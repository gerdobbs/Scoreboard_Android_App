<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/sky"
    tools:context="com.dobbs.ger.scores.Main2Activity"
    tools:ignore="Overdraw">

    <TextView
        android:id="@+id/homeTeam"
        android:layout_width="@dimen/teamWidth"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/topMargin"
        android:layout_marginLeft="@dimen/btnMargin"
        android:layout_marginStart="@dimen/btnMargin"
        android:text="@string/home"
        android:textSize="@dimen/btnTextSize"/>
    <TextView
        android:id="@+id/awayTeam"
        android:layout_width="@dimen/teamWidth"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/topMargin"
        android:layout_marginRight="@dimen/btnMargin"
        android:layout_marginEnd="@dimen/btnMargin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/btnTextSize"
        android:text="@string/away"
        android:gravity="end" />
    <TextView
        android:id="@+id/homePoints"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/homeTeam"
        android:layout_alignLeft="@id/homeTeam"
        android:layout_alignStart="@id/homeTeam"
        android:layout_alignRight="@id/homeTeam"
        android:layout_alignEnd="@id/homeTeam"
        android:layout_marginTop="@dimen/topMargin"
        android:text="@string/zero"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textSize="@dimen/totalText" />
    <TextView
        android:id="@+id/homePointsText"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/homeTeam"
        android:layout_alignRight="@id/awayTeam"
        android:layout_alignEnd="@id/awayTeam"
        android:layout_alignLeft="@id/homeTeam"
        android:layout_alignStart="@id/homeTeam"
        android:layout_marginTop="@dimen/topMargin"
        android:text="@string/totalPts"
        android:textStyle="bold|italic"
        android:layout_alignBaseline="@id/homePoints"
        android:textSize="@dimen/totalPtsText"
        android:gravity="center" />
    <TextView
        android:id="@+id/awayPoints"
        android:layout_width="@dimen/widthScoreBtns"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/topMargin"
        android:ems="10"
        android:layout_below="@id/awayTeam"
        android:layout_alignLeft="@id/awayTeam"
        android:layout_alignStart="@id/awayTeam"
        android:layout_alignRight="@id/awayTeam"
        android:layout_alignEnd="@id/awayTeam"
        android:text="@string/zero"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textSize="@dimen/totalText"/>
    <Button
        android:id="@+id/homeTry"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:layout_below="@id/homePoints"
        android:layout_alignLeft="@id/homeTeam"
        android:layout_alignStart="@id/homeTeam"
        android:text="@string/Try"/>
    <Button
        android:id="@+id/subtractHomeTry"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:text="@string/dash"
        android:layout_below="@id/homePoints"
        android:layout_alignRight="@id/homeTeam"
        android:layout_alignEnd="@id/homeTeam"/>
    <Button
        android:id="@+id/awayTry"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:layout_below="@id/awayPoints"
        android:layout_alignLeft="@id/awayPoints"
        android:layout_alignStart="@id/awayPoints"
        android:text="@string/Try"/>
    <Button
        android:id="@+id/subtractAwayTry"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:text="@string/dash"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/awayPoints"
        android:layout_alignRight="@id/awayTeam"
        android:layout_alignEnd="@id/awayTeam"/>
    <Button
        android:id="@+id/homePen"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:layout_below="@id/homeTry"
        android:layout_alignLeft="@id/homeTeam"
        android:layout_alignStart="@id/homeTeam"
        android:layout_marginTop="@dimen/penCon"
        android:text="@string/pen"/>
    <Button
        android:id="@+id/subtractHomePen"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:text="@string/dash"
        android:layout_below="@id/subtractHomeTry"
        android:layout_alignRight="@id/homeTeam"
        android:layout_alignEnd="@id/homeTeam"
        android:layout_marginTop="@dimen/penCon" />
    <Button
        android:id="@+id/awayPen"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:layout_below="@id/awayTry"
        android:layout_alignLeft="@id/awayTry"
        android:layout_alignStart="@id/awayTry"
        android:layout_marginTop="@dimen/penCon"
        android:text="@string/pen"/>
    <Button
        android:id="@+id/subtractAwayPen"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:text="@string/dash"
        android:layout_below="@id/subtractAwayTry"
        android:layout_alignLeft="@id/subtractAwayTry"
        android:layout_alignStart="@id/subtractAwayTry"
        android:layout_marginTop="@dimen/penCon" />
    <Button
        android:id="@+id/homeCon"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:layout_below="@id/homePen"
        android:layout_alignLeft="@id/homeTeam"
        android:layout_alignStart="@id/homeTeam"
        android:layout_marginTop="@dimen/penCon"
        android:text="@string/con"/>
    <Button
        android:id="@+id/subtractHomeCon"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:text="@string/dash"
        android:layout_below="@id/subtractHomePen"
        android:layout_alignRight="@id/homeTeam"
        android:layout_alignEnd="@id/homeTeam"
        android:layout_marginTop="@dimen/penCon" />
    <Button
        android:id="@+id/awayCon"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:layout_below="@id/awayPen"
        android:layout_alignLeft="@id/awayPen"
        android:layout_alignStart="@id/awayPen"
        android:layout_marginTop="@dimen/penCon"
        android:text="@string/con"/>
    <Button
        android:id="@+id/subtractAwayCon"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:text="@string/dash"
        android:layout_below="@id/subtractAwayPen"
        android:layout_alignLeft="@id/subtractAwayPen"
        android:layout_alignStart="@id/subtractAwayPen"
        android:layout_marginTop="@dimen/penCon" />
    <TextView
        android:id="@+id/homeTryCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homeCon"
        android:layout_alignRight="@id/homeCon"
        android:layout_alignEnd="@id/homeCon"
        android:layout_marginTop="@dimen/topMargin"
        android:text="@string/zero"
        android:textSize="@dimen/timerText"
        android:gravity="end" />
    <TextView
        android:id="@+id/triesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/triesText"
        android:textSize="@dimen/timerText"
        android:layout_below="@id/subtractHomeCon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/topMargin"
        android:gravity="center" />
    <TextView
        android:id="@+id/awayTryCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/awayCon"
        android:layout_alignLeft="@id/subtractAwayCon"
        android:layout_alignStart="@id/subtractAwayCon"
        android:layout_marginTop="@dimen/topMargin"
        android:text="@string/zero"
        android:textSize="@dimen/timerText"
        android:gravity="center" />
    <TextView
        android:id="@+id/homePenCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homeTryCount"
        android:layout_alignRight="@id/homeCon"
        android:layout_alignEnd="@id/homeCon"
        android:layout_marginTop="@dimen/penCon"
        android:text="@string/zero"
        android:textSize="@dimen/timerText"/>
    <TextView
        android:id="@+id/pensText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pensText"
        android:textSize="@dimen/timerText"
        android:layout_below="@id/triesText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/penCon"/>
    <TextView
        android:id="@+id/awayPenCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/awayTryCount"
        android:layout_alignLeft="@id/subtractAwayCon"
        android:layout_alignStart="@id/subtractAwayCon"
        android:layout_marginTop="@dimen/penCon"
        android:text="@string/zero"
        android:textSize="@dimen/timerText"/>
    <TextView
        android:id="@+id/homeConCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homePenCount"
        android:layout_alignRight="@id/homeCon"
        android:layout_alignEnd="@id/homeCon"
        android:layout_marginTop="@dimen/penCon"
        android:text="@string/zero"
        android:textSize="@dimen/timerText"/>
    <TextView
        android:id="@+id/consText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/consText"
        android:textSize="@dimen/timerText"
        android:layout_below="@id/pensText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/penCon"/>
    <TextView
        android:id="@+id/awayConCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/awayPenCount"
        android:layout_alignLeft="@id/subtractAwayCon"
        android:layout_alignStart="@id/subtractAwayCon"
        android:layout_marginTop="@dimen/penCon"
        android:text="@string/zero"
        android:textSize="@dimen/timerText"/>
    <Button
        android:id="@+id/gaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/homeTry"
        android:layout_alignStart="@id/homeTry"
        android:layout_alignRight="@id/subtractHomeTry"
        android:layout_alignEnd="@id/subtractHomeTry"
        android:text="@string/gaa"
        android:textSize="@dimen/timerText"/>
    <Button
        android:id="@+id/ResetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/subtractAwayTry"
        android:layout_alignLeft="@id/awayTry"
        android:layout_alignStart="@id/awayTry"
        android:layout_alignEnd="@id/subtractAwayTry"
        android:layout_marginTop="@dimen/topMargin2"
        android:textSize="@dimen/timerText"/>
    <TextView
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ResetButton"
        android:text="@string/timer"
        android:textSize="@dimen/hintText"
        android:gravity="center"/>
    <ImageButton
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/help"
        android:layout_alignRight="@id/homeTry"
        android:layout_alignEnd="@id/homeTry"
        android:layout_alignLeft="@id/homeTry"
        android:layout_alignStart="@id/homeTry"
        android:layout_marginTop="@dimen/topMargin3"
        android:layout_marginBottom="@dimen/topMargin"
        android:background="@android:color/transparent"
        android:contentDescription="@string/start"/>
    <ImageButton
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/help"
        android:layout_alignLeft="@id/subtractAwayTry"
        android:layout_alignStart="@id/subtractAwayTry"
        android:layout_alignRight="@id/subtractAwayTry"
        android:layout_alignEnd="@id/subtractAwayTry"
        android:layout_marginTop="@dimen/topMargin3"
        android:layout_marginBottom="@dimen/topMargin"
        android:background="@android:color/transparent"
        android:contentDescription="@string/stop"/>
    <TextView
        android:id="@+id/timerSep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/help"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/seperator"
        android:text="@string/sep"
        android:textSize="@dimen/dashSize" />
    <Button
        android:id="@+id/minsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/timerSep"
        android:layout_toStartOf="@id/timerSep"
        android:layout_above="@id/help"
        android:layout_marginRight="@dimen/topMargin"
        android:layout_marginEnd="@dimen/topMargin"
        android:layout_marginTop="@dimen/topMargin3"
        android:text="@string/dblZero"
        android:textSize="@dimen/textScoreBtns"
        android:gravity="end"/>
    <Button
        android:id="@+id/secsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/timerSep"
        android:layout_toEndOf="@id/timerSep"
        android:layout_marginLeft="@dimen/topMargin"
        android:layout_marginStart="@dimen/topMargin"
        android:layout_above="@id/help"
        android:text="@string/dblZero"
        android:textSize="@dimen/textScoreBtns"
        android:gravity="start"/>
    <TextView
        android:id="@+id/rugbyPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@id/homeTeam"
        android:layout_alignStart="@id/homeTeam"
        android:layout_alignRight="@id/awayTeam"
        android:layout_alignEnd="@id/awayTeam"
        android:gravity="center"
        android:text="@string/rugbyText"
        android:textSize="@dimen/timerText"
        android:textColor="@color/colorPrimary"/>

</RelativeLayout>
