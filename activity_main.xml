<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/sky"
    tools:context="com.dobbs.ger.scores.MainActivity">

    <TextView
        android:id="@+id/homeTeam"
        android:layout_width="@dimen/teamWidth"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/topMargin"
        android:layout_marginLeft="@dimen/btnMargin"
        android:layout_marginStart="@dimen/btnMargin"
        android:text="@string/home"
        android:textSize="@dimen/btnTextSize"
        android:gravity="start" />
    <TextView
        android:id="@+id/awayTeam"
        android:layout_width="@dimen/teamWidth"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/topMargin"
        android:layout_marginRight="@dimen/btnMargin"
        android:layout_marginEnd="@dimen/btnMargin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/btnTextSize"
        android:text="@string/away"
        android:gravity="end" />
    <TextView
        android:id="@+id/totalHomePoints"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:layout_below="@id/homeTeam"
        android:layout_alignLeft="@id/homeTeam"
        android:layout_alignStart="@id/homeTeam"
        android:layout_alignRight="@id/homeTeam"
        android:layout_alignEnd="@id/homeTeam"
        android:layout_marginTop="@dimen/topMargin"
        android:text="@string/zero"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textSize="@dimen/totalText" />
    <TextView
        android:id="@+id/totalAwayPoints"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/topMargin"
        android:layout_below="@id/awayTeam"
        android:layout_alignLeft="@id/awayTeam"
        android:layout_alignStart="@id/awayTeam"
        android:layout_alignRight="@id/awayTeam"
        android:layout_alignEnd="@id/awayTeam"
        android:text="@string/zero"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textSize="@dimen/totalText"/>
    <TextView
        android:id="@+id/homePointsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homeTeam"
        android:layout_alignLeft="@id/homeTeam"
        android:layout_alignStart="@id/homeTeam"
        android:layout_alignRight="@id/awayTeam"
        android:layout_alignEnd="@id/awayTeam"
        android:layout_alignBaseline="@id/totalHomePoints"
        android:text="@string/totalPts"
        android:textStyle="bold|italic"
        android:textSize="@dimen/totalPtsText"
        android:gravity="center" />
    <Button
        android:id="@+id/homeGoals"
        android:layout_width="@dimen/widthScoreBtns"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignLeft="@id/homeTeam"
        android:layout_alignStart="@id/homeTeam"
        android:layout_below="@id/totalHomePoints"
        android:layout_marginTop="@dimen/topMargin3"
        android:text="@string/zero"
        android:textStyle="bold|italic"
        android:textSize="@dimen/textScoreBtns"
        android:gravity="center" />
    <Button
        android:id="@+id/homePoints"
        android:layout_width="@dimen/widthScoreBtns"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/totalHomePoints"
        android:layout_alignRight="@id/homeTeam"
        android:layout_alignEnd="@id/homeTeam"
        android:layout_marginTop="@dimen/topMargin3"
        android:text="@string/dblZero"
        android:textStyle="bold|italic"
        android:textSize="@dimen/textScoreBtns"
        android:gravity="center" />
    <Button
        android:id="@+id/awayGoals"
        android:layout_width="@dimen/widthScoreBtns"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/topMargin3"
        android:ems="10"
        android:layout_below="@id/totalAwayPoints"
        android:layout_alignLeft="@id/awayTeam"
        android:layout_alignStart="@id/awayTeam"
        android:text="@string/zero"
        android:textStyle="bold|italic"
        android:textSize="@dimen/textScoreBtns"
        android:gravity="center" />
    <Button
        android:id="@+id/awayPoints"
        android:layout_width="@dimen/widthScoreBtns"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/topMargin3"
        android:ems="10"
        android:layout_below="@id/totalAwayPoints"
        android:layout_alignRight="@id/awayTeam"
        android:layout_alignEnd="@id/awayTeam"
        android:text="@string/dblZero"
        android:textStyle="bold|italic"
        android:textSize="@dimen/textScoreBtns"
        android:gravity="center" />
    <Button
        android:id="@+id/subtractHomeGoalButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/subtractHeight"
        android:text="@string/dash"
        android:layout_below="@id/homeGoals"
        android:layout_alignLeft="@id/homeGoals"
        android:layout_alignStart="@id/homeGoals"
        android:layout_alignRight="@id/homeGoals"
        android:layout_alignEnd="@id/homeGoals"
        android:layout_marginTop="@dimen/topMargin"/>
    <Button
        android:id="@+id/subtractHomePointButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/subtractHeight"
        android:text="@string/dash"
        android:layout_below="@id/homeGoals"
        android:layout_alignLeft="@id/homePoints"
        android:layout_alignStart="@id/homePoints"
        android:layout_alignRight="@id/homePoints"
        android:layout_alignEnd="@id/homePoints"
        android:layout_marginTop="@dimen/topMargin"/>
    <Button
        android:id="@+id/subtractAwayGoalButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/dash"
        android:layout_below="@id/awayGoals"
        android:layout_alignLeft="@id/awayGoals"
        android:layout_alignStart="@id/awayGoals"
        android:layout_alignRight="@id/awayGoals"
        android:layout_alignEnd="@id/awayGoals"
        android:layout_marginTop="@dimen/topMargin"/>
    <Button
        android:id="@+id/subtractAwayPointButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/dash"
        android:layout_below="@id/awayPoints"
        android:layout_alignRight="@id/awayPoints"
        android:layout_alignEnd="@id/awayPoints"
        android:layout_alignLeft="@id/awayPoints"
        android:layout_alignStart="@id/awayPoints"
        android:layout_marginTop="@dimen/topMargin"/>
    <Button
        android:id="@+id/rugby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/homeGoals"
        android:layout_alignStart="@id/homeGoals"
        android:layout_alignRight="@id/homePoints"
        android:layout_alignEnd="@id/homePoints"
        android:layout_alignParentBottom="true"
        android:text="@string/rugbyLabel"
        android:textSize="@dimen/timerText"/>
    <Button
        android:id="@+id/ResetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:textSize="@dimen/timerText"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/topMargin2"
        android:layout_alignRight="@id/awayPoints"
        android:layout_alignEnd="@id/awayPoints"
        android:layout_alignLeft="@id/awayGoals"
        android:layout_alignStart="@id/awayGoals"/>
    <TextView
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ResetButton"
        android:text="@string/timer"
        android:gravity="center"
        android:textSize="@dimen/hintText"/>
    <ImageButton
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/help"
        android:layout_alignRight="@id/homeGoals"
        android:layout_alignEnd="@id/homeGoals"
        android:layout_alignLeft="@id/homeGoals"
        android:layout_alignStart="@id/homeGoals"
        android:layout_marginTop="@dimen/topMargin3"
        android:layout_marginBottom="@dimen/topMargin"
        android:background="@android:color/transparent"
        android:contentDescription="@string/start"/>
    <ImageButton
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/help"
        android:layout_alignLeft="@id/awayPoints"
        android:layout_alignStart="@id/awayPoints"
        android:layout_alignRight="@id/awayPoints"
        android:layout_alignEnd="@id/awayPoints"
        android:layout_marginTop="@dimen/topMargin3"
        android:layout_marginBottom="@dimen/topMargin"
        android:background="@android:color/transparent"
        android:contentDescription="@string/start"/>
    <TextView
        android:id="@+id/timerSep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/help"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/seperator"
        android:text="@string/sep"
        android:textSize="@dimen/dashSize"
        android:gravity="start"/>
    <Button
        android:id="@+id/minsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/timerSep"
        android:layout_toStartOf="@id/timerSep"
        android:layout_above="@id/help"
        android:layout_marginRight="@dimen/topMargin"
        android:layout_marginEnd="@dimen/topMargin"
        android:layout_marginTop="@dimen/topMargin3"
        android:text="@string/dblZero"
        android:textSize="@dimen/textScoreBtns"
        android:gravity="end"/>
    <Button
        android:id="@+id/secsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/timerSep"
        android:layout_toEndOf="@id/timerSep"
        android:layout_marginLeft="@dimen/topMargin"
        android:layout_marginStart="@dimen/topMargin"
        android:layout_above="@id/help"
        android:text="@string/dblZero"
        android:textSize="@dimen/textScoreBtns"
        android:gravity="start"/>
    <TextView
        android:id="@+id/gaaPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@id/homeTeam"
        android:layout_alignStart="@id/homeTeam"
        android:layout_alignRight="@id/awayTeam"
        android:layout_alignEnd="@id/awayTeam"
        android:gravity="center"
        android:text="@string/gaaText"
        android:textSize="@dimen/timerText"
        android:textColor="@color/colorPrimary"/>

</RelativeLayout>